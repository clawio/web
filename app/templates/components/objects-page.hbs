<div class="ui hidden divider"></div>
<div class="ui hidden divider"></div>
<div class="ui container">

<div class="ui grid">
  <div class="two column row">
    <div class="left floated column">
    {{objects-breadcrumbs breadcrumbs=breadcrumbs list="list"}}
    </div>
    <div class="right floated column right aligned">
      <div class="ui icon input">
        {{input key-up="filter" type="text" placeholder="Filter..." value=filterterm}}
        <i class="search icon"></i>
      </div>
    </div>
  </div>
</div>

<table class="ui blue fixed table selectable very compact">
  <thead>
    <tr>
      <th class="left aligned one wide"></th>
      <th class="left aligned sorted ascending twelve wide">Name</th>
      <th class="right aligned two wide">Size</th>
      <th class="rigth aligned one wide"></th>
    </tr>
  </thead>
  <tbody>
	{{#each objects as |object|}}
	    <tr class="{{if object.ui_deleting "disabled error"}}">
	      <td class="left aligned collapsing">
			<a {{action "default" object.type object.pathspec}} href="">
				<i class="ui large {{mime object.type object.mime_type}} icon"></i>
			</a>
	      </td>
	      <td {{action "default" object.type object.pathspec}} class="collapsing left aligned"><a href="">{{basename object.pathspec}}</a></td>
	      <td class="right aligned collapsing">{{human-size object.type object.size 1024}}</td>
	      <td class="right aligned collapsing">
	      {{#if object.ui_deleting}}
		<i class="ui red icon circle notched loading"></i>
	      {{else}}
		<a {{action "delete" object.pathspec}} href=""><i class="ui red icon trash"></i></a>
	      {{/if}}
	      </td>
	    </tr>
	{{/each}}
  </tbody>
</table>
</div>
{{yield}}
